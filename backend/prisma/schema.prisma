generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tenant {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  name  String
  plan  String @default("FREE")
  slug  String @unique
  users User[]
  notes Note[]
}

model User {
  id       String @id @map("_id") @default(auto()) @db.ObjectId
  email    String @unique
  password String
  role     String
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])
}

model Note {
  id       String @id @map("_id") @default(auto()) @db.ObjectId
  title    String
  content  String
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])
}
